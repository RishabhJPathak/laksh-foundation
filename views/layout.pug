<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    link(rel="stylesheet" href="style.css")
    title= title
  body
    nav.py-0.navbar.navbar-expand-lg.navbar-light.shadow.px-3.bg-white.rounded.sticky-top
      .container-fluid
        a.navbar-brand(href="/" title="Home")
          img.img-bg(src="./images/logo.png" alt="Logo")
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarContent.text-center
          ul.navbar-nav.mx-auto.fs-5
            li.nav-item.mx-3
              a.nav-link(href='/' class= page==='home' ? 'active': "") Home
            li.nav-item.mx-3
              a.nav-link(href='/about' class= page==='about' ? 'active': "") About Us
            li.nav-item.mx-3
              a.nav-link(href='/events' class= page==='events' ? 'active': "") Events
            li.nav-item.mx-3
              a.nav-link(href='/gallery' class= page==='gallery' ? 'active': "") Gallery
            li.nav-item.mx-3
              a.nav-link(href='/contact' class= page==='contact' ? 'active': "") Contact Us
    .container.py-4
      block content

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script(src="https://code.iconify.design/1/1.0.7/iconify.min.js")

